<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link
      rel="stylesheet"
      href="src/register/fonts/material-icon/css/material-design-iconic-font.min.css"
    />
    <link
      rel="stylesheet"
      href="src/register/vendor/nouislider/nouislider.min.css"
    />

    <!-- Main css -->
    <link rel="stylesheet" href="src/register/css/style.css" />
    <style>
      .loginform {
        background-color: #329e5e;
        color: white;
        border: 2px solid white;
        padding: 13px 52px;
        border-radius: 6px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin-right: 30px;
      }
    </style>
  </head>

  <body>
    <div class="main">
      <div class="container">
        <div class="signup-content">
          <div class="signup-img">
            <img src="src/register/images/form-img.jpg" alt="" />
            <div class="signup-img-content">
              <h2>Register now</h2>
            </div>
          </div>
          <div class="signup-form">
            <form
              method="POST"
              action=""
              enctype="multipart/form-data"
              class="register-form"
              id="register-form"
            >
              <div class="form-row">
                <div class="form-group">
                  <div class="form-input">
                    <label for="first_name" class="required">First name</label>
                    <input type="text" name="first_name" id="first_name" />
                  </div>
                  <div class="form-input">
                    <label for="last_name" class="required">Last name</label>
                    <input type="text" name="last_name" id="last_name" />
                  </div>
                  <div class="form-input">
                    <label for="email" class="required">Email</label>
                    <input type="text" name="email" id="email" />
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-input">
                    <label for="phone_number" class="required"
                      >Phone number</label
                    >
                    <input type="text" name="phone_number" id="phone_number" />
                  </div>

                  <div class="form-input">
                    <label class="required">Password</label>
                    <input type="password" name="password" />
                  </div>

                  <div style="margin-bottom: 25px">
                    <label for="formFileLg" class="form-label"
                      >Choose Profile</label
                    >
                    <input type="file" name="image" id="formFile"  />
                  </div>
                </div>
              </div>
              <div class="form-submit">
                <input
                  type="submit"
                  value="Submit"
                  class="submit"
                  id="submit"
                  name="submit"
                />
                <a class="loginform" href="/login">LOGIN</a>
              </div>

              <% if(typeof message !== 'undefined'){ %>
              <p style="color: green"><%= message %></p>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- JS -->
    <script src="src/register/vendor/jquery/jquery.min.js"></script>
    <script src="src/register/vendor/nouislider/nouislider.min.js"></script>
    <script src="src/register/vendor/wnumb/wNumb.js"></script>
    <script src="src/register/vendor/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="src/register/vendor/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="src/register/js/main.js"></script>
  </body>
</html>
